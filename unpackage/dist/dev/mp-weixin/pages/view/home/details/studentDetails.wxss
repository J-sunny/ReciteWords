.stuDetailsBox {
  position: relative;
  overflow: hidden;
}
.stuDetailsBox .site-img {
    width: 100%;
    position: absolute;
    left: 0;
    top: 0;
    height: 376rpx;
    z-index: 10;
}
.stuDetailsBox .arrow {
    position: fixed;
    left: 40rpx;
    top: 73rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    width: 20rpx;
    height: 20rpx;
    border-left: 4rpx solid #fff;
    border-top: 4rpx solid #fff;
    -webkit-transform: rotate(-45deg);
        -ms-transform: rotate(-45deg);
            transform: rotate(-45deg);
    z-index: 20;
}
.stuDetailsBox .title {
    width: 100%;
    text-align: center;
    position: absolute;
    left: 0;
    top: 60rpx;
    font-size: 36rpx;
    font-weight: 800;
    color: white;
    opacity: 1;
    z-index: 15;
}
.stuDetailsBox .touBox {
    width: 100%;
    position: absolute;
    z-index: 30;
    top: 160rpx;
}
.stuDetailsBox .touBox .touXiang,
    .stuDetailsBox .touBox .touXiang image {
      width: 108rpx;
      height: 108rpx;
      margin: 0 auto;
}
.stuDetailsBox .touBox .touName {
      text-align: center;
      font-size: 30rpx;
      font-weight: 500;
      color: white;
      margin-top: 26rpx;
}
.stuDetailsBox .conBox {
    margin-top: 416rpx;
    padding: 0 32rpx;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    z-index: 50;
}
.stuDetailsBox .conBox .stuList {
      width: 686rpx;
      height: 352rpx;
      background: white;
      -webkit-box-shadow: 0px 8rpx 36rpx rgba(201, 201, 201, 0.15);
              box-shadow: 0px 8rpx 36rpx rgba(201, 201, 201, 0.15);
      opacity: 1;
      border-radius: 16rpx;
      padding: 40rpx 0 0 48rpx;
      -webkit-box-sizing: border-box;
      box-sizing: border-box;
}
.stuDetailsBox .conBox .stuList .toDay {
        width: 50%;
        height: 50%;
        float: left;
}
.stuDetailsBox .conBox .stuList .toDay .dayTitle {
          font-size: 24rpx;
          font-weight: bold;
          color: #5c6371;
}
.stuDetailsBox .conBox .stuList .toDay .dayTitle .titleIcon {
            width: 28rpx;
            height: 28rpx;
            margin-right: 16rpx;
}
.stuDetailsBox .conBox .stuList .toDay .dayNum {
          font-size: 16rpx;
          font-weight: 400;
          color: #999999;
}
.stuDetailsBox .conBox .stuList .toDay .dayNum .bigFont {
            font-size: 48rpx;
            font-weight: normal;
            color: #2e3548;
            margin-left: 44rpx;
            margin-right: 8rpx;
}
.stuDetailsBox .conBox .histogram {
      width: 100%;
      height: 820rpx;
      background: white;
      -webkit-box-shadow: 0px 8rpx 36rpx rgba(201, 201, 201, 0.15);
              box-shadow: 0px 8rpx 36rpx rgba(201, 201, 201, 0.15);
      border-radius: 16rpx;
      margin-top: 36rpx;
      padding: 32rpx 32rpx 40rpx;
      -webkit-box-sizing: border-box;
      box-sizing: border-box;
}
.stuDetailsBox .conBox .histogram .hisTitle {
        font-size: 28rpx;
        font-weight: 800;
        color: #2e3548;
}
.stuDetailsBox .conBox .histogram .hisTitle .titleIcon {
          width: 28rpx;
          height: 28rpx;
          margin-right: 16rpx;
}

